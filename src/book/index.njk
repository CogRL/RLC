<script>
function selectService(serviceType) {
    const formContainer = document.getElementById('booking-form-container');
    const serviceTitle = document.getElementById('service-title');
    const servicePrice = document.getElementById('service-price');
    const selectedService = document.getElementById('selected-service');
    const selectedPrice = document.getElementById('selected-price');
    const goalsTextarea = document.getElementById('goals');
    const availabilitySection = document.getElementById('availability-section');
    const availabilityInput = document.getElementById('availability');
    
    if (serviceType === 'coaching') {
        serviceTitle.textContent = '1-on-1 Psychological Coaching';
        servicePrice.textContent = '$20 / hour';
        selectedService.value = '1-on-1 Psychological Coaching';
        selectedPrice.value = '20';
        goalsTextarea.placeholder = 'e.g., Overcome tilt, improve decision-making, reach Champion rank, build mental resilience...';
        availabilitySection.style.display = 'block';
        availabilityInput.required = true;
    } else {
        serviceTitle.textContent = 'Replay Analysis';
        servicePrice.textContent = '$5 / replay';
        selectedService.value = 'Replay Analysis';
        selectedPrice.value = '5';
        goalsTextarea.placeholder = 'e.g., Understand my decision-making patterns, identify mental weaknesses, improve game awareness...';
        availabilitySection.style.display = 'none';
        availabilityInput.required = false;
        availabilityInput.value = ''; // Clear the value when hidden
    }
    
    formContainer.classList.remove('hidden');
    formContainer.scrollIntoView({ behavior: 'smooth' });
}

function backToSelection() {
    const formContainer = document.getElementById('booking-form-container');
    formContainer.classList.add('hidden');
    document.querySelector('.grid').scrollIntoView({ behavior: 'smooth' });
}

document.addEventListener('DOMContentLoaded', function () {
    const form = document.getElementById('booking-form');
    const submitButton = document.getElementById('submit-button');
    const formMessage = document.getElementById('form-message');
    const buttonText = document.getElementById('button-text');
    const buttonSpinner = document.getElementById('button-spinner');

    form.addEventListener('submit', function (e) {
        e.preventDefault();
        
        // Validate form
        if (!form.checkValidity()) {
            form.reportValidity();
            return;
        }

        // Show loading state
        submitButton.disabled = true;
        buttonText.classList.add('hidden');
        buttonSpinner.classList.remove('hidden');
        formMessage.textContent = '';

        // Gather form data
        const formData = new FormData(form);
        const customerInfo = {
            name: formData.get('name'),
            email: formData.get('email'),
            discord: formData.get('discord'),
            rank: formData.get('rank'),
            goals: formData.get('goals'),
            availability: formData.get('availability')
        };

        const serviceType = formData.get('service') === '1-on-1 Psychological Coaching' ? 'coaching' : 'replay';

        // Create checkout session
        fetch('/.netlify/functions/create-checkout-session', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                serviceType: serviceType,
                customerInfo: customerInfo,
                successUrl: `${window.location.origin}/success?session_id={CHECKOUT_SESSION_ID}`,
                cancelUrl: `${window.location.origin}/book`
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.error) {
                throw new Error(data.error);
            }
            
            // Redirect to Stripe Checkout
            window.location.href = data.url;
        })
        .catch(error => {
            console.error('Error:', error);
            formMessage.textContent = 'Oops! There was a problem processing your request. Please try again or contact me directly.';
            formMessage.className = 'text-red-600 text-sm text-center mt-4';
            
            // Reset button state
            submitButton.disabled = false;
            buttonText.classList.remove('hidden');
            buttonSpinner.classList.add('hidden');
        });
    });
});
</script> 